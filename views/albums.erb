<h1>All Sales Vinyl</h1>

<h3>Available Records</h3>

<% if @albums.any? %>
<ul>
  <% @albums.each do |album| %>
  <li><a href="/albums/<%= album.id %>/edit"><%= album.name %> - <%= album.artist %> (<%= album.year %>) | <%= album.genre %> </a></li>
  <% end %>
</ul>
<% else %>
<p>There are currently no records to display.</p>
<% end %>

<a href="/albums/new">Add a new album</a>

<form action="/albums">
  <div class="form-group">
    <br>
    <label for="search">Search for Albums: </label>
    <input id="search" name="search" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Search</button>
</form>
